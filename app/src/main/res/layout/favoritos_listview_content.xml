<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:gravity="center_vertical"
        android:padding="2dip"
        android:text="Titulo"
        android:textColor="#736F6E"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/categoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/titulo"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:gravity="center_vertical"
        android:padding="2dip"
        android:text="Categoria"
        android:textColor="#736F6E"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/titulo"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:gravity="center_vertical"
        android:padding="2dip"
        android:text="bar"
        android:textColor="#736F6E"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/descr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/bar"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:gravity="center_vertical"
        android:padding="2dip"
        android:text="descr"
        android:textColor="#736F6E"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/inicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/descr"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:gravity="center_vertical"
        android:padding="2dip"
        android:text="inicio"
        android:textColor="#736F6E"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/aux"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/descr"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/inicio"
        android:gravity="center_vertical"
        android:padding="2dip"
        android:text="-"
        android:textColor="#736F6E"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/fin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/descr"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/aux"
        android:gravity="center_vertical"
        android:padding="2dip"
        android:text="fin"
        android:textColor="#736F6E"
        android:textSize="12sp"
        android:textStyle="bold" />

    <!--<Button-->
        <!--android:id="@+id/button"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:background="@android:drawable/ic_menu_close_clear_cancel"-->
        <!--android:backgroundTint="@color/textColor"-->
        <!--android:elevation="0dp"-->
        <!--android:onClick="favoritosClick"-->
        <!--android:layout_alignBottom="@+id/fin"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_alignParentEnd="true"-->
        <!--android:layout_alignTop="@+id/fin" />-->

    <ImageView
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/textColor"
        android:onClick="favoritosClick"
        app:srcCompat="@android:drawable/ic_menu_close_clear_cancel"
        android:layout_alignBottom="@+id/fin"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>


