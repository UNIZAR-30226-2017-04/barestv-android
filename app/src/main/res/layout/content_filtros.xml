<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="unizar.margarethamilton.barestv_android.FiltrosActivity"
    tools:showIn="@layout/activity_filtros">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TextoFiltroFecha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/texto_filtro_fecha"
                android:textAlignment="center"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="24sp" />

            <DatePicker
                android:id="@+id/datePicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:datePickerMode="calendar"
                android:headerBackground="@color/colorAccent" />

            <TextView
                android:id="@+id/TextoFiltroCategoria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/texto_filtro_categoria"
                android:textAlignment="center"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="24sp" />

            <GridView
                android:id="@+id/cat_grid"
                android:layout_width="match_parent"
                android:layout_height="254dp"
                android:numColumns="auto_fit"
                android:verticalSpacing="20dp"
                android:horizontalSpacing="10dp"
                android:stretchMode="columnWidth"
                android:gravity="center"
                />
        </LinearLayout>
</ScrollView>
